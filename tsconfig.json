{
    "compilerOptions": {
      "sourceMap": true,
      "target": "es2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "outDir": "./dist",
      "strict": true,
      "allowJs": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "baseUrl": ".",
      "paths": {
        "@server/*": ["server/*"],
        "@frontend/*": ["frontend/*"],
      }
    }
}
